{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "components/**",
                    "content/**",
                    "css/**",
                    "images/**",
                    "js/**",
                    "index.html",
                    "robots.txt"
                ]
            }
        }
    ],
    "routes": [{ "src": "/(.*)", "dest": "/api/index.js" }]
}
